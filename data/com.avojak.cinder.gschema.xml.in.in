<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="@SCHEMA_PATH@" id="@APPLICATION_ID@">
    <key name="window-maximized" type="b">
      <default>false</default>
      <summary>Window maximized</summary>
      <description>Whether the window was maximized on last run</description>
    </key>
    <key name="window-width" type="i">
      <default>500</default>
      <summary>Window width</summary>
      <description>Most recent window width</description>
    </key>
    <key name="window-height" type="i">
      <default>350</default>
      <summary>Window height</summary>
      <description>Most recent window height</description>
    </key>
    <key name="default-temperature" type="i">
      <default>57</default>
      <summary>Default temperature</summary>
      <description>The default target temperature (in degrees Celsius) if no preset is used</description>
    </key>
    <key name="temperature-unit" type="i">
      <default>0</default>
      <summary>Temperature unit</summary>
      <description>The temperature unit (Celsius or Fahrenheit)</description>
    </key>
    <key name="temperature-presets" type="s">
      <default>"Latte:55,Cappuccino:56,Coffee:57,Black Tea:58,Green Tea:59"</default>
      <summary>Temperature presets</summary>
      <description>The customizable temperature presets as a map of their label to the temperature in degrees Celsius</description>
    </key>
  </schema>
</schemalist>